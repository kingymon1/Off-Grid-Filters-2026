<script>
  // Splash intro animation sequencer
  (function() {
    const overlay = document.getElementById('splash-overlay');
    if (!overlay) return;

    // Skip if reduced motion preferred
    if (window.matchMedia('(prefers-reduced-motion: reduce)').matches) {
      overlay.classList.add('done');
      return;
    }

    // Skip if user has already seen splash this session
    if (sessionStorage.getItem('splash-seen')) {
      overlay.classList.add('done');
      return;
    }

    const productWrap = overlay.querySelector('.splash-product-wrap') as HTMLElement;
    const flash = overlay.querySelector('.splash-flash') as HTMLElement;
    const cracks = overlay.querySelector('.splash-cracks') as HTMLElement;

    // Phase 1: Float animation plays via CSS for 2s
    // Phase 2: Crash into screen at 2s
    setTimeout(() => {
      productWrap.classList.add('phase-crash');
    }, 2000);

    // Phase 3: Flash + cracks at 2.35s (when product is large enough)
    setTimeout(() => {
      flash.classList.add('active');
      cracks.classList.add('active');
    }, 2350);

    // Phase 4: Dissolve overlay to reveal page at 2.6s
    setTimeout(() => {
      overlay.classList.add('dissolve');
    }, 2600);

    // Phase 5: Clean up at 3.1s
    setTimeout(() => {
      overlay.classList.add('done');
      sessionStorage.setItem('splash-seen', '1');
    }, 3100);
  })();
</script>
