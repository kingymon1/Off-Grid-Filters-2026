---
import ContentLayout from '../layouts/ContentLayout.astro';
import ProductImage from '../components/ProductImage.astro';
import ProTip from '../components/ProTip.astro';
import { guides, getProductBySlug, getAffiliateUrl, isPublished } from '../lib/config';
import { generateArticleSchema, generateFAQSchema, combineSchemas } from '../lib/schema';

const guide = guides.find(g => g.slug === 'water-filters-for-well-water')!;
