    <a href={getAffiliateUrl(sawyerSqueeze.asin)} target="_blank" rel="nofollow sponsored noopener" class="btn-primary" style="color:#fff!important;text-shadow:0 1px 2px rgba(0,0,0,.2)">
      <span>Check Top Pick on Amazon</span>
    </a>
  </div>
</ContentLayout>

