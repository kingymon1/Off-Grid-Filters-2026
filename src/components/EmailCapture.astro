---
import { siteConfig } from '../lib/config';

interface Props {
  tag?: string;
}

const { tag = 'general' } = Astro.props;
const { email } = siteConfig;

// Render nothing if no Buttondown username is configured
if (!email.username) return undefined;
---

<section class="section email-section">
  <div class="container">
    <div class="email-card reveal">
      <div class="email-icon">
        <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="16" x="2" y="4" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>
      </div>
      <h2 class="email-heading">{email.heading}</h2>
      <p class="email-subheading">{email.subheading}</p>
      <form
        action={`https://buttondown.com/api/emails/embed-subscribe/${email.username}`}
        method="post"
        class="email-form"
      >
        <div class="email-input-group">
          <input
            type="email"
            name="email"
            placeholder="you@example.com"
            required
            aria-label="Email address"
            autocomplete="email"
            class="email-input"
          />
          <input type="hidden" name="embed" value="1" />
          <input type="hidden" name="tag" value={tag} />
          <button type="submit" class="email-btn">
            <span>{email.ctaText}</span>
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
          </button>
        </div>
      </form>
      <p class="email-trust">
        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="18" height="11" x="3" y="11" rx="2" ry="2"/><path d="M7 11V7a5 5 0 0 1 10 0v4"/></svg>
        <span>No spam. Unsubscribe anytime.</span>
      </p>
    </div>
  </div>
</section>

<style>
  .email-section {
    padding: 3rem 0;
  }

  .email-card {
    background: linear-gradient(135deg, hsl(var(--card)), hsl(var(--muted)));
    border: 1px solid hsl(var(--border));
    border-radius: 1.5rem;
    padding: 3rem 2rem;
    text-align: center;
    position: relative;
    overflow: hidden;
    max-width: 640px;
    margin: 0 auto;
  }

  .email-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: linear-gradient(90deg, hsl(var(--primary)), hsl(var(--accent)), hsl(var(--primary)));
  }

  .email-icon {
    display: inline-flex;
    padding: 0.75rem;
    border-radius: 0.75rem;
    background: hsl(var(--primary) / 0.1);
    color: hsl(var(--primary));
    margin-bottom: 1.25rem;
  }

  .email-heading {
    font-size: 1.5rem;
    font-weight: 800;
    letter-spacing: -0.03em;
    margin-bottom: 0.5rem;
    color: hsl(var(--foreground));
  }

  .email-subheading {
    font-size: 1rem;
    color: hsl(var(--muted-foreground));
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }

  .email-form {
    max-width: 440px;
    margin: 0 auto 1rem;
  }

  .email-input-group {
    display: flex;
    gap: 0.5rem;
  }

  .email-input {
    flex: 1;
    padding: 0.875rem 1rem;
    border-radius: 0.75rem;
    border: 1px solid hsl(var(--border));
    background: hsl(var(--background));
    color: hsl(var(--foreground));
    font-size: 0.9375rem;
    font-family: inherit;
    outline: none;
    transition: border-color 0.2s, box-shadow 0.2s;
    min-width: 0;
  }

  .email-input::placeholder {
    color: hsl(var(--muted-foreground) / 0.6);
  }

  .email-input:focus {
    border-color: hsl(var(--primary));
    box-shadow: 0 0 0 3px hsl(var(--primary) / 0.15);
  }

  .email-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.875rem 1.5rem;
    border-radius: 0.75rem;
    border: none;
    background: linear-gradient(135deg, hsl(var(--primary)), hsl(var(--primary-warm)));
    color: #fff !important;
    font-size: 0.9375rem;
    font-weight: 700;
    font-family: inherit;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
    white-space: nowrap;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.15);
  }

  .email-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px -4px hsl(var(--primary) / 0.4);
  }

  .email-btn:active {
    transform: translateY(0);
  }

  .email-trust {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.375rem;
    font-size: 0.75rem;
    color: hsl(var(--muted-foreground) / 0.7);
    margin: 0;
  }

  .email-trust svg {
    flex-shrink: 0;
  }

  @media (max-width: 640px) {
    .email-card {
      padding: 2rem 1.25rem;
    }

    .email-input-group {
      flex-direction: column;
    }

    .email-input {
      width: 100%;
    }

    .email-btn {
      width: 100%;
      justify-content: center;
      padding: 1rem;
    }

    .email-heading {
      font-size: 1.25rem;
    }
  }
</style>
