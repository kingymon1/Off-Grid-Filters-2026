---
interface Article {
  title: string;
  url: string;
  description: string;
}

interface Props {
  articles: Article[];
  heading?: string;
}

const { articles, heading = "Related Guides" } = Astro.props;
---

<section class="related-articles">
  <h2 class="related-heading">{heading}</h2>
  <div class="related-grid">
    {articles.map((article) => (
      <a href={article.url} class="related-card">
        <h3 class="related-title">{article.title}</h3>
        <p class="related-description">{article.description}</p>
        <span class="related-arrow">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
        </span>
      </a>
    ))}
  </div>
</section>

<style>
  .related-articles { margin-top: 3rem; padding: 2rem; background-color: hsl(var(--muted) / 0.3); border-radius: 1rem; border: 1px solid hsl(var(--border)); }
  .related-heading { font-size: 1.375rem; font-weight: 700; margin-bottom: 1.25rem; color: hsl(var(--foreground)); letter-spacing: -0.02em; }
  .related-grid { display: grid; gap: 0.75rem; }
  @media (min-width: 768px) { .related-grid { grid-template-columns: repeat(2, 1fr); } }
  .related-card { display: block; padding: 1.25rem; background-color: hsl(var(--background)); border-radius: 0.75rem; border: 1px solid hsl(var(--border)); transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1); position: relative; }
  .related-card:hover { border-color: hsl(var(--primary) / 0.3); box-shadow: 0 4px 16px -4px rgba(0, 0, 0, 0.2); transform: translateY(-2px); }
  .related-title { font-size: 1rem; font-weight: 600; margin-bottom: 0.375rem; color: hsl(var(--foreground)); transition: color 0.2s; letter-spacing: -0.01em; }
  .related-card:hover .related-title { color: hsl(var(--primary)); }
  .related-description { font-size: 0.8125rem; color: hsl(var(--muted-foreground)); margin: 0; line-height: 1.5; }
  .related-arrow { position: absolute; top: 1.25rem; right: 1.25rem; color: hsl(var(--muted-foreground)); opacity: 0; transform: translateX(-4px); transition: all 0.2s; }
  .related-card:hover .related-arrow { opacity: 1; transform: translateX(0); color: hsl(var(--primary)); }
</style>
