---
import ProductImage from './ProductImage.astro';
import type { Product } from '../lib/config';
import { getAffiliateUrl, specLabels } from '../lib/config';

interface Props {
  product: Product;
}

const { product } = Astro.props;
const affiliateUrl = getAffiliateUrl(product.asin);

// Build specs list dynamically from available product data using specLabels map
const specEntries: { label: string; value: string }[] = [];
for (const [key, label] of Object.entries(specLabels)) {
  const val = product.specs[key];
  if (val) {
    specEntries.push({ label, value: val });
  }
}

// Cap at 6 specs for a clean layout
const specs = specEntries.slice(0, 6);
---

<div class="product-hero">
  <div class="hero-image">
    <ProductImage alt={product.name} aspect="square" slug={product.slug} priority={true} />
  </div>

  <div class="hero-details">
    <!-- Key Specs Grid -->
    <div class="hero-specs">
      {specs.map(s => (
        <div class="hero-spec">
          <span class="hero-spec-label">{s.label}</span>
          <span class="hero-spec-value">{s.value}</span>
        </div>
      ))}
    </div>

    <!-- Verdict -->
    <div class="hero-verdict">
      <div class="verdict-heading">Our Verdict</div>
      <p class="verdict-text">{product.verdict}</p>
      <div class="verdict-bestfor">
        <span class="bestfor-icon" aria-hidden="true">âœ“</span>
        <span><strong>Best for:</strong> {product.bestFor}</span>
      </div>
    </div>

    <!-- CTA -->
    <a href={affiliateUrl} target="_blank" rel="nofollow sponsored noopener" class="hero-cta">
      Check Price on Amazon
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M7 17l9.2-9.2M17 17V7H7"/></svg>
    </a>
  </div>
</div>

<style>
  .product-hero {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    align-items: start;
    margin: 1.5rem 0 2.5rem;
  }

  /* Remove ProductImage standalone constraints when inside hero */
  .hero-image :global(.product-image-real) {
    max-width: none;
    margin: 0;
  }

  .hero-details {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  /* Key Specs Grid */
  .hero-specs {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0.5rem;
    padding: 1rem;
    background: hsl(var(--card));
    border: 1px solid hsl(var(--border));
    border-radius: 0.75rem;
  }

  .hero-spec {
    display: flex;
    flex-direction: column;
    gap: 0.15rem;
    padding: 0.4rem 0;
  }

  .hero-spec-label {
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: hsl(var(--muted-foreground));
  }

  .hero-spec-value {
    font-size: 0.85rem;
    font-weight: 600;
    color: hsl(var(--foreground));
    line-height: 1.3;
  }

  /* Verdict */
  .hero-verdict {
    padding: 1rem;
    background: hsl(var(--muted));
    border: 1px solid hsl(var(--border));
    border-radius: 0.75rem;
  }

  .verdict-heading {
    font-size: 0.7rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: hsl(var(--primary));
    margin-bottom: 0.5rem;
  }

  .verdict-text {
    font-size: 0.9rem;
    line-height: 1.5;
    color: hsl(var(--foreground));
    margin: 0 0 0.75rem;
  }

  .verdict-bestfor {
    display: flex;
    align-items: flex-start;
    gap: 0.4rem;
    font-size: 0.85rem;
    color: hsl(var(--foreground) / 0.85);
    line-height: 1.4;
  }

  .bestfor-icon {
    color: hsl(142 70% 45%);
    font-weight: 700;
    flex-shrink: 0;
    margin-top: 0.1rem;
  }

  /* CTA Button */
  .hero-cta {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    background: linear-gradient(135deg, hsl(var(--accent)), hsl(var(--accent-warm)));
    color: #fff !important;
    font-weight: 700;
    font-size: 0.95rem;
    border-radius: 0.6rem;
    text-decoration: none;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .hero-cta:hover {
    transform: translateY(-1px);
    box-shadow: 0 4px 16px hsl(var(--accent) / 0.3);
  }

  /* Mobile: stack vertically */
  @media (max-width: 768px) {
    .product-hero {
      grid-template-columns: 1fr;
      gap: 1.25rem;
    }

    .hero-image {
      max-width: 320px;
      margin: 0 auto;
    }

  }
</style>
