---
interface Props {
  title?: string;
}

const { title = 'Pro Tip' } = Astro.props;
---

<div class="protip">
  <div class="protip-header">
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"/></svg>
    <span class="protip-title">{title}</span>
  </div>
  <div class="protip-body"><slot /></div>
</div>

<style>
  .protip { padding: 1.25rem 1.5rem; border-radius: 0.75rem; background-color: hsl(var(--primary) / 0.06); border: 1px solid hsl(var(--primary) / 0.12); margin-bottom: 1.5rem; }
  .protip-header { display: flex; align-items: center; gap: 0.5rem; color: hsl(205 70% 58%); margin-bottom: 0.375rem; }
  .protip-title { font-size: 0.8125rem; font-weight: 700; text-transform: uppercase; letter-spacing: 0.05em; }
  .protip-body { font-size: 0.9375rem; color: hsl(var(--muted-foreground)); line-height: 1.6; }
  .protip-body :global(p) { margin: 0; }
</style>
